+    using OperatingSystem = System.OperatingSystem;
+
+    /// <summary>
+    /// Represents a custom Maui Web View.
+    /// </summary>
+    public class CustomWebView : MauiWKWebView
+    {
+        private CustomUIEditMenuInteractionDelegate _interactionDelegate;
+
+        /// <summary>
+        /// Initializes a new instance of the <see cref="CustomWebView"/> class.
+        /// </summary>
+        /// <param name="interactionDelegate">The interaction delegate.</param>
+        /// <param name="frame">The frame.</param>
+        /// <param name="handler">The handler.</param>
+        /// <param name="configuration">The configuration.</param>
+        public CustomWebView(CustomUIEditMenuInteractionDelegate interactionDelegate,
+                             CGRect frame,
+                             WebViewHandler handler,
+                             WKWebViewConfiguration configuration)
+            : base(frame, handler, configuration)
+        {
+            _interactionDelegate = interactionDelegate;
+        }
+
+        /// <inheritdoc />
+        public override bool CanPerform(Selector action, NSObject? withSender)
+        {
+            // If we recently presented a different menu, do not allow the default menu to ovrwrite it.
+            if (_interactionDelegate.IsRecentlyPresented())
+                return false;
+
+            return base.CanPerform(action, withSender);
+        }
+    }
+}
