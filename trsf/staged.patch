+    using Viewer.ServerAPI;
+    using Viewer.Services;
+    using WebKit;
+    using OperatingSystem = System.OperatingSystem;
+
+    /// <summary>
+    /// Represents a custom UI interaction delegate.
+    /// </summary>
+    public class CustomUIEditMenuInteractionDelegate : UIEditMenuInteractionDelegate
+    {
+        private Stopwatch _stopwatch = Stopwatch.StartNew();
+        private TimeSpan _lastPresentationTime;
+
+        /// <summary>
+        /// Gets or sets the custom menu items.
+        /// </summary>
+        public List<(string Title, EventHandler<string> Handler)> ContextMenuItems { get; set; } = [];
+
+        /// <summary>
+        /// Gets or sets the selected text.
+        /// </summary>
+        public string SelectedText { get; set; } = string.Empty;
+
+        /// <summary>
+        /// Checks whether the custom UI interaction (custom menu) was presented recently.
+        /// </summary>
+        public bool IsRecentlyPresented()
+        {
+            return _lastPresentationTime != default && _stopwatch.Elapsed < _lastPresentationTime + TimeSpan.FromSeconds(1);
+        }
+
+        /// <inheritdoc />
+        public override UIMenu? GetMenu(UIEditMenuInteraction interaction,
+                                        UIEditMenuConfiguration configuration,
+                                        UIMenuElement[] suggestedActions)
+        {
+            try
+            {
+                _lastPresentationTime = _stopwatch.Elapsed;
+
+                List<UIMenuElement> actions = new(suggestedActions);
+                foreach (var menuItem in ContextMenuItems)
+                {
+                    actions.Add(UIAction.Create(menuItem.Title, null, null, (action) => { menuItem.Handler.Invoke(this, SelectedText); }));
+                }
+
+                UIMenu contextMenu = UIMenu.Create("ContextMenu", null, UIMenuIdentifier.Document, UIMenuOptions.DisplayInline, actions.ToArray());
+                UIMenu menu = UIMenu.Create(children: [contextMenu]);
+
+                return menu;
+            }
+            catch (System.Exception exc)
+            {
+                Console.WriteLine(exc.Message);
+                throw;
+            }
+        }
+    }
+}
